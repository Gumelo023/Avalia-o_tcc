<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">#FF9800</item>
    <item name="colorPrimaryDark">#F57C00</item>
    <item name="colorAccent">#FFEB3B</item>
</style>

